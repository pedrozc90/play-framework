<configuration>
    <conversionRule conversionWord="coloredLevel" converterClass="play.api.libs.logback.ColoredLevel"/>

    <property name="LOGS_DIR" value="logs"/>
    <property name="ARCHIVE_DIR" value="${LOGS_DIR}/archive"/>

    <property name="STDOUT_PATTERN" value="%magenta(%date{yyyy-MM-dd HH:mm:ss.SSS}) %highlight(%-7.7([%.5level])) %cyan(%32.32logger{16}) [%.9thread] %message%n%xException"/>
    <property name="FILE_PATTERN" value="%date{yyyy-MM-dd HH:mm:ss.SSS} %-7.7([%.5level]) %32.32logger{16} [%.9thread] %message%n%xException"/>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${STDOUT_PATTERN}</pattern>
        </encoder>
    </appender>

    <logger name="akka" level="DEBUG"/>
    <logger name="play" level="DEBUG"/>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
